<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_image"
    tools:context=".DetailedViewScreen">

    <EditText
        android:id="@+id/musicInfoTextView"
        android:layout_width="198dp"
        android:layout_height="105dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="316dp"
        android:ems="10"
        android:inputType="text"
        android:text="Music Info"
        android:textColor="#F2EBEB"
        app:layout_constraintBottom_toTopOf="@+id/songInfoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeScreenButton"
        android:layout_width="165dp"
        android:layout_height="64dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="632dp"
        android:text="Return To Home Screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/averageRatingButton"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:layout_marginStart="121dp"
        android:layout_marginBottom="16dp"
        android:text="average song rating"
        app:layout_constraintBottom_toTopOf="@+id/homeScreenButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/songInfoButton"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginStart="123dp"
        android:layout_marginBottom="10dp"
        android:text="Display the songs info"
        app:layout_constraintBottom_toTopOf="@+id/averageRatingButton"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/averageRatingTextView"
        android:layout_width="217dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="text"
        android:text="Song Rating"
        android:textColor="#F0ECEC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicInfoTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>